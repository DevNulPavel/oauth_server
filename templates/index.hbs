<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        
        <title>Paradise Island2</title>
        <meta name="description" content="">
        <meta name="author" content="">

        <link rel="stylesheet" href="static/css/styles.css?v=1.1">
        <script src="static/js/script.js?v=1.1"></script>
    </head>

    <body style="overflow: auto">
        {{!-- sandbox="" --}}
        <iframe name="game_frame"
                style="overflow: hidden; display: block; width:100%; height:100%"
                frameborder="0"
                style="border: 0"
                allow="fullscreen *" 
                loading = "lazy"
                onload="" 
                onerror=""
                src="{{game_url}}">
                <p>The browser does not support iframes</p>
        </iframe>

        <details style="display: none">
            <summary>Support info</summary>
            <div style="float:left;vertical-align:bottom">
                User UUID: {{uuid}} <br>
                {{#if (facebook_uid)}}
                    Facebook UID: {{facebook_uid}} <br>
                {{/if}}

                {{#if (google_uid)}}
                    Google UID: {{google_uid}} <br>
                {{/if}}
            </div>

            <div class="button" style="float:right;vertical-align:bottom">
                <form action=/logout method=POST>
                    <button type=submit>Logout</button>
                </form>
            </div>
        </details>

    </body>
</html>